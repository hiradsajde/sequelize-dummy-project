doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Add a New Room
    body 
        form(method="post" , action="/admin/add-room")
            input(type="text" , name="name" , placeholder="title")
            input(type="submit" , value="add room")
        ul(style="list-style-type:none")
            each product in products 
                li 
                    form(method="post" , action="/admin/delete-product")
                        div(style="display:inline-block") 
                            a(href=`/admin/room/${product.id}`) #{product.name} 
                        div(style="display:inline-block")
                            input(type="hidden" , value=product.dataValues.id , name="id")
                            input(type="submit" , value="(Delete)" style="border : none ; background-color : transparent ; text-decoration : underline")